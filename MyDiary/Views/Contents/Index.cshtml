@model IEnumerable<MyDiary.Models.Content>

@{
    ViewData["Title"] = "Index";
}

<h2>Content</h2>
<h3>Share your story with the world</h3>
<img src="~/images/banner_5.jpg" alt="ASP.NET" width="100%" height="60%"/>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Writer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
